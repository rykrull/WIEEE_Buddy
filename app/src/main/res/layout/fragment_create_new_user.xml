<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.createNewUser">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cnufirstname"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:hint="First Name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cnulastname"
        android:layout_below="@+id/cnufirstname"
        android:layout_centerHorizontal="true"
        android:hint="Last Name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cnuusername"
        android:hint="Username"
        android:layout_below="@+id/cnulastname"
        android:layout_alignLeft="@+id/cnupassword"
        android:layout_alignStart="@+id/cnupassword"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/cnupassword"
        android:layout_alignEnd="@+id/cnupassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cnupasswordconfirm"
        android:hint="Confirm Password"
        android:layout_below="@+id/cnupassword"
        android:layout_alignLeft="@+id/cnupassword"
        android:layout_alignStart="@+id/cnupassword"
        android:layout_alignRight="@+id/cnupassword"
        android:layout_alignEnd="@+id/cnupassword" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cnupassword"
        android:layout_below="@+id/cnuusername"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Account"
        android:id="@+id/cnubutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

</RelativeLayout>
